check process cf-mysql-broker
  with pidfile /var/vcap/sys/run/bpm/cf-mysql-broker/cf-mysql-broker.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start cf-mysql-broker" with timeout 60 seconds
  stop program "/var/vcap/jobs/bpm/bin/bpm stop cf-mysql-broker"
  group vcap

<% if p("cf_mysql.broker.disable_quota_enforcer") == false %>
check process quota-enforcer
  with pidfile /var/vcap/sys/run/bpm/cf-mysql-broker/quota-enforcer.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start cf-mysql-broker -p quota-enforcer" with timeout 60 seconds
  stop program "/var/vcap/jobs/bpm/bin/bpm stop cf-mysql-broker -p quota-enforcer"
  group vcap
  depends on cf-mysql-broker
<% end %>

check process mariadb_ctrl
  with pidfile /var/vcap/sys/run/bpm/mysql/mariadb_ctrl.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start mysql -p mariadb_ctrl" with timeout <%= p('cf_mysql.mysql.startup_timeout') %> seconds
  stop program "/var/vcap/jobs/bpm/bin/bpm stop mysql -p mariadb_ctrl"
  group vcap

check process galera-healthcheck
  with pidfile /var/vcap/sys/run/galera-healthcheck/galera-healthcheck.pid
  start program "/var/vcap/jobs/mysql/bin/galera-healthcheck_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/mysql/bin/galera-healthcheck_ctl stop" with timeout 10 seconds
  group vcap

check process gra-log-purger
  with pidfile /var/vcap/sys/run/bpm/mysql/gra-log-purger.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start mysql -p gra-log-purger"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop mysql -p gra-log-purger"
  group vcap

check process cluster_health_logger
  with pidfile /var/vcap/sys/run/bpm/mysql/cluster_health_logger.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start mysql -p cluster_health_logger"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop mysql -p cluster_health_logger"
  group vcap
